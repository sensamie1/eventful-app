      <a href="/views/creators/events/upload-image" class="active"><i class="fa fa-calendar-check-o" style="font-size:18px; padding-right: 10px;"></i>Create Event</a>
      <a href="/views/creators/events"><i class="fa fa-calendar" style="font-size:18px; padding-right: 10px;"></i>Events</a>
      <a href="/views/creators/my-events"><i class="fa fa-calendar-check-o" style="font-size:18px; padding-right: 10px;"></i>My Events</a>
      <a href="/views/creators/logout"><i class="fa fa-sign-out" aria-hidden="true" style="padding-right: 10px;"></i>Logout</a>
      <a href="/views/users/welcome" target="_blank"><i class="fa fa-fw fa-user" style="padding-right: 5px;"></i>Attendee</a>
      <a href="mailto:sen4word@gmail.com" target="_blank"><i class="fa fa-envelope" style="font-size: large; padding-right: 10px;"></i></i>Contact Us</a>


