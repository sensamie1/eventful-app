    {{else}}
      <a href="/views/creators/welcome" class="active"><i class="fa fa-home" style="padding-right: 10px;"></i>Home</a>
      <a href="/views/creators/events"><i class="fa fa-calendar" style="font-size:18px; padding-right: 10px;"></i>Events</a>
      <a href="/views/creators/login"><i class="fa fa-sign-in" aria-hidden="true" style="padding-right: 10px;"></i>Login</a>
      <a href="/views/creators/signup"><i class="fa fa-fw fa-user" style="padding-right: 5px;"></i>Signup</a>
      <a href="/views/users/welcome" target="_blank"><i class="fa fa-fw fa-user" style="padding-right: 5px;"></i>Attendee</a>
