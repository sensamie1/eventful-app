  <div class="search-form">
    <form id="searchForm" action="/views/creators/auth-search" method="get">
      <label for="search" class="search-label"></label>
      <input type="text" id="search" name="query" placeholder="Search for events..." class="search-input" required>
      <input type="submit" value="Search" class="search-submit">
    </form>
  </div>
  {{else}}
    <div class="search-form">
      <form id="searchForm" action="/views/creators/search" method="get">
        <label for="search" class="search-label"></label>
        <input type="text" id="search" name="query" placeholder="Search for events..." class="search-input" required>
        <input type="submit" value="Search" class="search-submit">
      </form>
    </div>
  {{/if}}

  <script>
    function toggleNav() {
      var sidenav = document.getElementById("sidenav");
      if (sidenav.style.left === "-250px") {
        sidenav.style.left = "0";
      } else {
        sidenav.style.left = "-250px";
      }
    }

    // Close the sidebar if the user clicks anywhere outside the sidebar
    window.onclick = function(event) {
      var sidenav = document.getElementById("sidenav");
      if (event.target !== sidenav && event.target.className !== "menu-icon") {
        sidenav.style.left = "-250px";
      }
    };
  </script>

</body>
</html>
